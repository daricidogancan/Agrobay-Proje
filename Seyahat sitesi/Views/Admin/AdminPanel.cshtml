@using Seyahat_sitesi.Models.sınıflar;
@model List<Blog>

@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Blog Listesi</h2>
<br />
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td> @x.ID </td>
            <td> @x.Baslik </td>
            <td> <a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a> </td>
            <td> <a href="#" class="btn btn-warning">Güncelle</a></td>
            <th><a href="" class="btn btn-primary">Detaylar</a></th>

        </tr>
    }
</table>

<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Blog</a>
